<%= form_tag movies_path, method: :get do %>

  <div class="form-group">
    <%= date_field_tag :release_date, params[:release_date], placeholder: "Release Date" %>
  </div>

  <div class="form-group">
    <%= text_field_tag :movie_name, params[:movie_name], placeholder: "Movie Name" %>
  </div>

  <%= submit_tag "Filter" %>

<% end %>
